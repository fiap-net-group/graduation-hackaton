@model Graduation.Hackaton.VideoProcessing.MVC.Models.UploadVideoProcessingViewModel

@{
    ViewData["Title"] = "Envio de Video";
}
<section class="col-md-4 col-sm-12">
    <form asp-action="SaveVideo" method="post" enctype="multipart/form-data">

        @* @Html.AntiForgeryToken() *@
        <input asp-for="Name" type="hidden" value="" />
        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" aria-required="true" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VideoFile">Image</label>
            <input asp-for="VideoFile" type="file" class="form-control" aria-required="true" required />
            <span asp-validation-for="VideoFile" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</section>